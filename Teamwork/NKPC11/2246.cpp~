	memset(dp,0,sizeof(dp));
	dp[1][2] = 1;
	for(int i = 1; i <= 100; ++i)
		for(int j = 2; j <= 200; ++j){
			dp[i][j+1] = dp[i][j] * 
		}
	int n; scanf("%d",&n);
	double ans = 0;
	for(int i = 0; i <= 2*n; ++i)
		ans += dp[n][i] * i;
	printf("%.6lf\n",ans);
